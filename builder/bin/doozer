#!/usr/bin/perl -w

use strict;
use warnings;
use FindBin ();

die unless @ARGV > 0;
my $bin = $FindBin::Bin;
my $subcommand = shift @ARGV;
$bin =~ s!bin$!libexec/doozer/doozer-$subcommand! or die;
-x $bin or die "doozer-$subcommand: not a doozer subcommand\n";
exec( $bin, @ARGV );
die;
